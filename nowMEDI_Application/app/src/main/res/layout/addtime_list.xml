<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/tv_daytime"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="@string/medi_morning"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_ampm"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="@string/ex_morning"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_hour"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="@string/ex_hour"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_minute"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="@string/ex_minute"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <ImageButton
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/iv_minus"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="0"
        android:contentDescription="@drawable/minus_icon"
        app:srcCompat="@drawable/minus_icon" />

</LinearLayout>